<%- include('../../shared/includes/head', { pageTitle: 'Login' }) %>
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
  <%- include('../../shared/includes/header') %>
  <main>
    <h1>Login</h1>
    <% if (inputData.hasError) { %>
      <div class="error">
        <h2>Error</h2>
        <p><%= inputData.message %></p>
      </div>
    <% } %>
    <form action="/login" method="POST">
      <input type="hidden" name="_csrf" value="<%= locals._csrf %>"/>
        <p>
          <label for="email">Email</label>
          <input type="email" name="email" id="email" value="<%= inputData.email %>" required>
        </p>
        <p>
          <label for="password">Password</label>
          <input type="password" name="password" id="password" minlength="6" value="<%= inputData.password %>" required>
        </p>
        <button class="btn">Login</button>
        <p id="switch-form"><a href="/signup">Create an account</a></p>
    </form>
  </main>
<%- include('../../shared/includes/footer') %>