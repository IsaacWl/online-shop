<article class="product-item">
    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
    <div class="product-item-content">
      <h2><%= product.title %></h2>
      <% if (locals.isAdmin) { %>
      <div class="product-item-actions">
        <a href="/admin/products/<%= product.id %>" class="btn btn-alt">View & Edit</a>
        <button class="btn btn-alt" data-productid="<%= product.id %>" data-csrf="<%= locals._csrf %>">Delete</button>
      </div>
      <% } else { %>
        <a class="btn btn-alt" href="/products/<%= product.id %>">View details</a>
      <% } %>
    </div>
</article>